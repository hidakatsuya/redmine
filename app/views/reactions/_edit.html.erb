<%= turbo_frame_tag dom_id(reactable, :react) do %>
  <% if reaction.present? %>
    <%= link_to(
          reaction_path(reaction, reactable_type: reactable.class.name, reactable_id: reactable),
          data: {
            turbo_method: :delete,
            controller: 'tooltip', tooltip_content_value: reacted_user_names(reactable)
          },
          class: ['icon', 'reaction', 'reacted']
        ) do %>
          <%= sprite_icon('thumb-up-filled', reactable.reactions.size) %>
    <% end %>
  <% else %>
    <%= link_to(
          reactions_path(reactable_type: reactable.class.name, reactable_id: reactable),
          data: {
            turbo_method: :post,
            controller: 'tooltip', tooltip_content_value: reacted_user_names(reactable)
          },
          class: ['icon', 'reaction']
        ) do %>
          <%= sprite_icon('thumb-up', reactable.reactions.size) %>
    <% end %>
  <% end %>
<% end %>
