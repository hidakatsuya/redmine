<% @gantt.view = self %>
{
  const area = document.getElementById('gantt_area');
  const scrollPosition = { top: area.scrollTop, left: area.scrollLeft };

  document.getElementById('gantt-body').innerHTML = '<%=j render 'body' %>';

  // Restore scroll position after rendering
  requestAnimationFrame(() => {
    document.getElementById('gantt_area').scrollTo(scrollPosition);
  });
}
